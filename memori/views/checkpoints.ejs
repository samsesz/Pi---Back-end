<div class="container-formulario">
    <h3> Registro de Checkpoints </h3>
    <hr>
    <div class="wrapper">
    <div class="cadastrar">
        <h4> Cadastrar Checkpoint </h4>
        <hr>
        <form action="/checkpoints/new" method="POST">
            <div class="inserir-dados">
            <label> Nome do Checkpoint:</label>
            <input type="text" name="nome-checkpoint" placeholder="Digite nome do checkpoint" class="form-input" required>
            <br>

            <label> Descrição do Checkpoint:</label>
            <textarea id="descricao-checkpoint" name="descricao-checkpoint" class="form-input" placeholder="Digite nome do checkpoint">
            </textarea>

            <br>
            <label> Rota do Checkpoint: </label>
            <select name="rota-checkpoint" id="rota-checkpoint">
                <option value="#">KKKK</option>
              </select> 
              <br>

            <label> Longitude do Checkpoint:</label>
            <input type="text" name="longitude-checkpoint" placeholder="Digite a longitude" class="form-input" required>
            <label>Latitude do Checkpoint:</label>
            <input type="text" name="latitude-checkpoint" placeholder="Digite a latitude" class="form-input" required>
            
            <label>Imagem do Checkpoint:</label>
            <div class="cadastro-arquivo" method="post" enctype="multipart/form-data">
                <form action="/upload-foto-checkpoint">
                    <input type="file" name="upload-capa" class="btn-arquivo" required>    
                </form>
            </div>
            
            <br><br>
            <div class="div-botao">
                <button name="cadastrar-checkpoint" class="button-cadastro"> Cadastrar </button>
            </div>
            </div>
        </form>
    </div>

        <div class="consultar">
            <h4> Consultar Checkpoint </h4>
            <table>
              <thead>
                <th> Id </th>
                <th> Nome do Checkpoint </th>
                <th> Descrição </th>
                <th> Rota </th>
                <th> Descrição </th>
                <th> Longitude </th>
                <th> Latitude </th>
                <th> Imagem </th>
                <th style="text-align: center;" colspan="2">Ações:</th>
              </thead>
                <tr>
                    <td>a</td>
                    <td>KKKK</td>
                    <td>Registro/SP</td>
                    <td>xxxxxxxxxx</td>
                    <td>yyyyyyyyyy</td>
                    <td>Registro/SP</td>
                    <td>xxxxxxxxxx</td>
                    <td><img src="#" height="20px"></td>
                    <td>
                        <Button name="abrir-mapa" class="abrir-mapa"> <i class = "fas fa-map"></i></Button>
                    </td>
                    <td>
                        <Button name="editar-rota" class="btn-editar"> <i class = "fas fa-pencil"></i>
                        </Button>
                    </td>
                    <td>
                        <Button name="excluir-rota" class="btn-excluir"> <i class = "fas fa-cancel"></i></Button>
                    </td>
                </tr>
                
            </table>
    </div>
</div>

<div class="wrapper">
    <div class="cadastrar">
        <h4> Cadastrar Modelagem </h4>
        <hr>
        <form action="/modelagem/new" method="POST">
            <div class="inserir-dados">
            <label> Nome da Modelagem:</label>
            <input type="text" name="nome-modelagem" placeholder="Digite nome do checkpoint" class="form-input" required>
            <br>

            <label> Cidade: </label>
            <select name="cidade-modelagem" id="cidade-modelagem">
                <option value="#">Registro</option>
              </select> 
              <br>

            <label> Checkpoint: </label>
            <select name="checkpoint-modelagem" id="checkpoint-modelagem">
